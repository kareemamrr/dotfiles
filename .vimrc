syntax on

" numbered lines
set number

" maximum number of columns and highlighted
set textwidth=79

" autoindent lines
set autoindent

" number of spaces when indenting
set shiftwidth=4

" number of spaces in tab
set tabstop=4

" expand a tab to its spaces equivalent
set expandtab

" number of spaces removed with one backspace to remove tabs
set softtabstop=4

" show matching brackets
set showmatch

" case sensitive search
set smartcase

" highlight while searching
set incsearch

" fold indented blocks
set foldmethod=indent
set foldlevel=99
